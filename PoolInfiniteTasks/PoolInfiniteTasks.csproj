<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <BaseVersion>8.1.1</BaseVersion>
    <VersionPrefix>$(BaseVersion)</VersionPrefix>
    <RepositoryUrl>https://github.com/DeveloperSuccess/PoolInfiniteTasks</RepositoryUrl>
    <Authors>Arthur Bogdanov</Authors>
    <Copyright>©Copyright 2024 Arthur Bogdanov. All rights reserved.</Copyright>
    <PackageTags>task;threading;thread;async;await;multithreading;multitasking;pool;background;multiple</PackageTags>
